<!DOCTYPE html>
<html>
<head>
  <title>
  	<% if content_for?(:title) %>
		<%= yield(:title) %>
	<% else %>
		London Events
	<% end %>
  </title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
	<div class='flash' id='<%= key %>'>
		<%= value %>
	</div>
<% end %>
<h1><%= link_to "London Events", root_path %></h1>

<%= yield %>

</body>
</html>
